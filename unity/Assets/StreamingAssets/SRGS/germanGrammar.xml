<grammar version="1.0" xml:lang="de-DE" root="topLevel"
 xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">

    <rule id="topLevel">
	    <one-of>		    
		    <item>
			    <ruleref uri="#changeRoomCommand" />
		    </item>
			<item>
				<ruleref uri="#experimentCommand" />
			</item>
	    </one-of>
    </rule>

	<rule id="experimentCommand">
		<ruleref uri="#experimentAction" />
		<tag> out.experimentAction = rules.latest(); </tag>

		<one-of>
			<item>experimentieren</item>
			<item>simulation</item>
			<item/>
		</one-of>
	</rule>

    <rule id="changeRoomCommand">
		<one-of>
			<item> gehe zu </item>
			<item> bringe mich zu </item>
			<item> wechsle zu </item>
		</one-of>
		
		<ruleref uri="#room" />
		<tag> out.roomName = rules.latest(); </tag>

		<one-of>
			<item>Raum</item>
			<item>Experiment</item>
			<item>Szene</item>
			<item/>	
		</one-of>
	</rule>	

	<rule id="experimentAction">
		<one-of>
			<item>
				zur√ºcksetzen <tag> out = "reset"; </tag>
			</item>
			<item>
				<one-of>
					<item> beginnen </item>
					<item> starten </item>					
				</one-of>
				<tag> out = "start"; </tag>
			</item>
			<item>
				stoppen <tag> out = "stop"; </tag>
			</item>
		</one-of>
	</rule>
   
    <rule id="room">
	    <one-of>
			<item>
				Lobby <tag> out = "MainMenu.vr"; </tag>
			</item>
			<item>
				fallende Spule <tag> out = "FallingCoil.vr"; </tag>
			</item>
			<item>
				Huygens-Prinzip <tag> out = "HuygensPrinciple.vr"; </tag>
		    </item>
			<item>
				Faradays Gesetz <tag> out = "FaradaysLaw.vr"; </tag>
			</item>
			<item>
				Van de Graaff 
				<one-of>
					<item>Generator</item>
					<item/>
				</one-of>
				<tag> out = "VandeGraaffGenerator.vr"; </tag>
			</item>			
		</one-of>
    </rule>	
  
</grammar>